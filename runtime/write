BASE_ADDR=0x2000
      REG_START=$((BASE_ADDR + 4 * 0))
 REG_HSI_SELECT=$((BASE_ADDR + 4 * 1))
REG_FORCE_CACHE=$((BASE_ADDR + 4 * 2))


axi()
{
    axireg $1 $2 $3 $4    
}


force_cache=0

if [ ! -z $1 ]; then
    force_cache=$1
    shift
fi

# This signal is rising-edge sensitive
axi $REG_FORCE_CACHE $force_cache
axi $REG_FORCE_CACHE 0

axi $REG_START       1

